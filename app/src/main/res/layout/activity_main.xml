<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@drawable/fondo_imagen">

    <TextView
        android:layout_width="381dp"
        android:layout_height="123dp"
        android:layout_marginBottom="32dp"
        android:fontFamily="sans-serif-medium"
        android:text="Bienvenido a LifeBook"
        android:textColor="#333"
        android:textSize="35sp"
        android:gravity="center"/>

    <ImageView
        android:layout_width="242dp"
        android:layout_height="214dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/ic_life_book_logo" />

    <Button
        android:id="@+id/biometricLoginButton"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/biometric_button_backgound"
        android:drawableTop="@drawable/ic_fingerprint"
        android:drawablePadding="20dp"
        android:text=""
        android:textColor="#FF000000"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:gravity="center" />

    <Button
        android:id="@+id/googleLoginButton"
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:background="@drawable/button_background"
        android:drawableLeft="@drawable/ic_google_logo"
        android:padding="10dp"
        android:textColor="#FF000000"
        android:textSize="15sp" />

</LinearLayout>
